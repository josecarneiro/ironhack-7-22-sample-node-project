<form action="/authentication/sign-in" method="POST">
  <div class="mb-3">
    <label for="input-email" class="form-label">Email</label>
    <input type="email" id="input-email" name="email" placeholder="Your Email" class="form-control" />
  </div>

  <div class="mb-3">
    <label for="input-password" class="form-label">Password</label>
    <input type="password" name="password" id="input-password" placeholder="A Strong Password" class="form-control" />
  </div>

  <button class="btn btn-primary">Sign In</button>
</form>
